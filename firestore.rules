rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read venues, but keep writes restricted.
    match /venues/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Portfolio entries are public too.
    match /portfolio/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Team members list is public.
    match /teamMembers/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Everything else remains locked down.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
